---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogType?: string;
  ogImage?: string;
  matchSchema?: any;
}

const { 
  title, 
  description = "Mira deportes en vivo, fútbol, baloncesto y más en football.evaulthub.com. Streamings gratuitos de alta calidad.",
  ogType = "website",
  ogImage = "/favicon.ico",
  matchSchema,
  matchSlug
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO -->
    <title>{title} | football.evaulthub.com</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={ogType} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />

    {matchSchema && (
      <script type="application/ld+json" set:html={JSON.stringify(matchSchema)} />
    )}
    
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Inicio",
          "item": Astro.site
        }
      ]
    })} />

    <!-- Google AdSense -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7025462814384100" crossorigin="anonymous"></script>

    <!-- Popup Ad -->
    <script src="https://pl26869306.effectivegatecpm.com/22/9f/cc/229fcc7fac3be2c689fa4fa174ce4169.js"></script>
  </head>
  <body data-match-slug={matchSlug}>
    <header>
      <div class="header-container">
        <a href="/" class="logo">
          football<span>.evaulthub.com</span>
        </a>
        <div class="nav-scroll">
          <nav class="nav-links">
            <a href="/" class="active">Fútbol</a>
            <a href="/">Baloncesto</a>
            <a href="/">Tenis</a>
            <a href="/">En Vivo</a>
            <a href="/">Programación</a>
          </nav>
        </div>
      </div>
    </header>

    <main class="main-content">
      <slot />
    </main>

    <footer>
      <div class="footer-links">
        <a href="/">DMCA</a>
        <a href="/">Contact</a>
        <a href="/">Privacy</a>
      </div>
      <p class="copyright">&copy; {new Date().getFullYear()} football.evaulthub.com - Todos los derechos reservados.</p>
    </footer>
  </body>
</html>
