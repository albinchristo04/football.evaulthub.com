---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ChannelList from '../../components/ChannelList.astro';
import ShareButtons from '../../components/ShareButtons.astro';
import AdUnit from '../../components/AdUnit.astro';
import { slugify } from '../../utils/slugify';

export async function getStaticPaths() {
  const allEvents: any[] = [];
  
  // Fetch Server 1
  const res1 = await fetch('https://raw.githubusercontent.com/albinchristo04/blogger-autopost/refs/heads/main/rojadirecta_events.json');
  const d1 = await res1.json();
  (d1.events || []).forEach((e: any) => {
    allEvents.push({
      title: e.description,
      competition: e.country,
      date: e.date,
      time: e.time,
      channels: e.channels.map((ch: any) => ({ name: ch.name, url: ch.decoded_url }))
    });
  });

  // Fetch Server 2
  const res2 = await fetch('https://raw.githubusercontent.com/albinchristo04/mayiru/refs/heads/main/sports_events.json');
  const d2 = await res2.json();
  Object.entries(d2.events || {}).forEach(([day, events]: [string, any]) => {
    events.forEach((e: any) => {
      allEvents.push({
        title: e.event,
        competition: 'Sports',
        date: day,
        time: e.time,
        channels: e.streams.map((url: string, i: number) => ({ name: `Stream ${i + 1}`, url: url }))
      });
    });
  });

  // Fetch Server 3
  const res3 = await fetch('https://raw.githubusercontent.com/albinchristo04/ptv/refs/heads/main/events_with_m3u8.json');
  const d3 = await res3.json();
  (d3.events?.streams || []).forEach((category: any) => {
    category.streams.forEach((e: any) => {
      const dateObj = new Date(e.starts_at * 1000);
      allEvents.push({
        title: e.name,
        competition: category.category,
        date: dateObj.toLocaleDateString('es-ES'),
        time: dateObj.toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit' }),
        channels: [{ name: e.tag || 'Default', url: e.iframe }]
      });
    });
  });

  return allEvents.map((match: any) => {
    const matchSlug = slugify(`${match.competition}-${match.title}`);
    return {
      params: { slug: matchSlug },
      props: { match, matchSlug }
    };
  });
}

const { match, matchSlug } = Astro.props;
const currentUrl = `https://football.evaulthub.com/partido/${matchSlug}/`;
const embedUrl = `https://football.evaulthub.com/embed/${matchSlug}/`;

const matchSchema = {
  "@context": "https://schema.org",
  "@type": "SportsEvent",
  "name": match.title,
  "description": `Ver ${match.title} en vivo - ${match.competition}`,
  "startDate": match.date, // Note: Schema prefers ISO format, but keeping as is for simplicity
  "homeTeam": {
    "@type": "SportsTeam",
    "name": match.title.split(' vs ')[0] || match.title
  },
  "awayTeam": {
    "@type": "SportsTeam",
    "name": match.title.split(' vs ')[1] || ""
  },
  "location": {
    "@type": "Place",
    "name": match.competition
  }
};
---

<BaseLayout 
  title={`${match.title} en vivo`} 
  description={`Ver ${match.title} en vivo gratis. Stream online de ${match.competition}. Disfruta del partido sin cortes.`}
  matchSchema={matchSchema}
  matchSlug={matchSlug}
>
  <div class="match-page-container">
    <AdUnit type="leaderboard" />

    <div class="match-page-header">
      <h2 class="match-title">
        <span class="live-indicator">EN VIVO</span> 
        {match.title}
      </h2>
      <p class="match-meta">{match.competition} | {match.date} {match.time}</p>
    </div>

    <AdUnit type="mobile" />

    <div class="player-container-wrapper">
      <div class="channel-selector-top">
        <div class="channel-selector">
          <div class="channel-buttons">
            {match.channels.map((channel: any, index: number) => (
              <button 
                class={`btn channel-btn ${index === 0 ? 'active' : ''}`} 
                data-url={channel.url}
                data-index={index + 1}
              >
                <span>OPCI√ìN</span> {index + 1} - {channel.name}
              </button>
            ))}
          </div>
        </div>
      </div>

      <div class="player-section card">
        <div class="responsive-iframe-container">
          <iframe 
            id="match-player"
            name="match-player-iframe"
            src={`/embed/${matchSlug}-ch1/`} 
            allowfullscreen 
            scrolling="no"
            loading="lazy"
          ></iframe>
        </div>
        
        <div class="notice-bar">
          <span>üõ°Ô∏è Recomendamos usar <a href="https://1.1.1.1/" target="_blank" rel="noopener noreferrer"><b>DNS 1.1.1.1</b></a> o una <b>VPN</b> si el reproductor no carga.</span>
        </div>
      </div>
    </div>

    <AdUnit type="small" />

    <ShareButtons matchName={match.title} matchUrl={currentUrl} />

    <AdUnit type="square" />

    <div class="seo-content card">
      <h3>¬øC√≥mo ver {match.title} online?</h3>
      <p>
        Puedes ver el partido <strong>{match.title}</strong> de la <strong>{match.competition}</strong> 
        totalmente gratis a trav√©s de nuestros canales de streaming. Solo selecciona uno de los canales 
        disponibles arriba y disfruta de la mejor calidad.
      </p>
      <div class="embed-code">
        <label>C√≥digo para insertar:</label>
        <div class="textarea-wrapper">
          <textarea readonly>{`<iframe src="${embedUrl}" width="100%" height="500" frameborder="0"></iframe>`}</textarea>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  function setupChannelButtons() {
    const buttons = document.querySelectorAll('.channel-btn');
    const iframe = document.getElementById('match-player') as HTMLIFrameElement;

    if (!iframe) return;

    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const channelIndex = button.getAttribute('data-index');
        const matchSlug = document.body.getAttribute('data-match-slug');
        
        iframe.src = `/embed/${matchSlug}-ch${channelIndex}/`;
        
        // Update active state
        buttons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        // Optional: Trigger ad refresh if global function exists
        if (window.initAds) window.initAds();
      });
    });
  }

  // Run on page load
  setupChannelButtons();

  // Run on view transitions if enabled
  document.addEventListener('astro:after-swap', setupChannelButtons);
</script>

<style>
  .channel-selector {
    margin: 0;
  }
  
  .channel-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
  }

  .channel-btn {
    font-size: 0.75rem;
    padding: 0.6rem 1rem;
    background-color: #333;
    border: 1px solid #444;
    color: #fff;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .channel-btn span {
    color: var(--primary-red);
    font-weight: 900;
  }

