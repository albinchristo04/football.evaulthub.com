    text-transform: uppercase;
  }

  .textarea-wrapper {
    background: #f4f4f4;
    padding: 10px;
    border-radius: var(--radius);
    border: 1px solid #ddd;
  }

  .embed-code textarea {
    width: 100%;
    height: 70px;
    background: transparent;
    border: none;
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.8rem;
    color: #555;
    resize: none;
    outline: none;
  }

  @media (max-width: 600px) {
    .match-title {
