---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ChannelList from '../../components/ChannelList.astro';
import ShareButtons from '../../components/ShareButtons.astro';
import { slugify } from '../../utils/slugify';

export async function getStaticPaths() {
  const response = await fetch('https://raw.githubusercontent.com/albinchristo04/blogger-autopost/refs/heads/main/rojadirecta_events.json');
  const data = await response.json();
  const events = data.events || [];

  return events.map((event: any) => {
    const match = {
      title: event.description,
      competition: event.country,
      date: event.date,
      time: event.time,
      channels: event.channels.map((ch: any) => ({
        name: ch.name,
        url: ch.decoded_url
      }))
    };
    const slug = slugify(`${match.competition}-${match.title}`);
    return {
      params: { slug },
      props: { match }
    };
  });
}

const { match } = Astro.props;
const currentUrl = `https://football.evaulthub.com/partido/${slugify(`${match.competition}-${match.title}`)}/`;

const matchSchema = {
  "@context": "https://schema.org",
  "@type": "SportsEvent",
  "name": match.title,
  "description": `Ver ${match.title} en vivo - ${match.competition}`,
  "startDate": match.date, // Note: Schema prefers ISO format, but keeping as is for simplicity
  "homeTeam": {
    "@type": "SportsTeam",
    "name": match.title.split(' vs ')[0] || match.title
  },
  "awayTeam": {
    "@type": "SportsTeam",
    "name": match.title.split(' vs ')[1] || ""
  },
  "location": {
    "@type": "Place",
    "name": match.competition
  }
};
---

<BaseLayout 
  title={`${match.title} en vivo`} 
  description={`Ver ${match.title} en vivo gratis. Stream online de ${match.competition}. Disfruta del partido sin cortes.`}
  matchSchema={matchSchema}
>
  <div class="match-page-container">
    <div class="match-page-header">
      <h2 class="match-title">
        <span class="live-indicator">EN VIVO</span> 
        {match.title}
      </h2>
      <p class="match-meta">{match.competition} | {match.date} {match.time}</p>
    </div>

    <div class="player-container-wrapper">
      <div class="channel-selector-top">
        <ChannelList channels={match.channels} />
      </div>

      <div class="player-section card">
        <div class="responsive-iframe-container">
          <iframe 
            id="match-player"
            src={match.channels[0]?.url} 
            allowfullscreen 
            scrolling="no"
            loading="lazy"
          ></iframe>
        </div>
        
        <div class="notice-bar">
          <span>üõ°Ô∏è Recomendamos usar <b>DNS 1.1.1.1</b> o una <b>VPN</b> si el reproductor no carga.</span>
        </div>
      </div>
    </div>

    <ShareButtons matchName={match.title} matchUrl={currentUrl} />

    <div class="seo-content card">
      <h3>¬øC√≥mo ver {match.title} online?</h3>
      <p>
        Puedes ver el partido <strong>{match.title}</strong> de la <strong>{match.competition}</strong> 
        totalmente gratis a trav√©s de nuestros canales de streaming. Solo selecciona uno de los canales 
        disponibles arriba y disfruta de la mejor calidad.
      </p>
      <div class="embed-code">
        <label>C√≥digo para insertar:</label>
        <div class="textarea-wrapper">
          <textarea readonly>{`<iframe src="${currentUrl}" width="100%" height="500" frameborder="0"></iframe>`}</textarea>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .match-page-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .player-container-wrapper {
    background: #1a1a1a;
    padding: 1rem;
    border-radius: var(--radius);
    box-shadow: 0 15px 35px rgba(0,0,0,0.6);
    margin-bottom: 2rem;
    border: 1px solid #333;
  }

  .channel-selector-top {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #333;
  }

  .match-page-header {
    margin-bottom: 2rem;
    text-align: center;
    background: #111;
    padding: 1.5rem;
    border-radius: var(--radius);
    border-left: 4px solid var(--primary-red);
  }

  .match-title {
    font-size: 1.6rem;
    font-weight: 900;
    color: var(--white);
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .live-indicator {
    background: var(--primary-red);
    color: white;
    padding: 3px 8px;
    font-size: 0.75rem;
    font-weight: 900;
    border-radius: 3px;
    vertical-align: middle;
    margin-right: 10px;
    animation: blink 1.5s infinite;
    display: inline-block;
  }

  @keyframes blink {
    0% { opacity: 1; }
    50% { opacity: 0.4; }
    100% { opacity: 1; }
  }

  .match-meta {
    color: #888;
    font-size: 0.95rem;
    font-weight: 700;
    text-transform: uppercase;
  }

  .player-section {
    margin-bottom: 0;
    border: none;
    box-shadow: none;
    background: #000;
    width: 100%;
  }

  .responsive-iframe-container {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    width: 100%;
    background: #000;
  }

  .responsive-iframe-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .notice-bar {
    background: #fff3cd;
    color: #856404;
    padding: 1rem;
    font-size: 0.85rem;
    text-align: center;
    border-top: 1px solid #ffeeba;
    font-weight: 600;
  }

  .seo-content {
    padding: 2rem;
    color: var(--text-dark);
    line-height: 1.7;
    margin-top: 3rem;
  }

  .seo-content h3 {
    margin-bottom: 1rem;
    font-size: 1.25rem;
    font-weight: 800;
    color: var(--primary-red);
    text-transform: uppercase;
  }

  .embed-code {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .embed-code label {
    display: block;
    font-size: 0.8rem;
    margin-bottom: 0.75rem;
    font-weight: 800;
    color: var(--text-muted);
    text-transform: uppercase;
  }

  .textarea-wrapper {
    background: #f4f4f4;
    padding: 10px;
    border-radius: var(--radius);
    border: 1px solid #ddd;
  }

  .embed-code textarea {
    width: 100%;
    height: 70px;
    background: transparent;
    border: none;
    font-family: 'Courier New', Courier, monospace;
    font-size: 0.8rem;
    color: #555;
    resize: none;
    outline: none;
  }

  @media (max-width: 600px) {
    .match-title {
      font-size: 1.3rem;
    }
    .match-page-header {
      padding: 1rem;
    }
    .seo-content {
      padding: 1.5rem;
    }
  }
</style>
