    background-color: #444;
    border-color: var(--primary-red);
    transform: translateY(-2px);
  }

  .channel-btn.active {
    background-color: var(--primary-red);
    border-color: var(--primary-red);
    box-shadow: 0 4px 15px rgba(211, 47, 47, 0.4);
  }

  .channel-btn.active span {
    color: white;
  }

  .match-page-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .player-container-wrapper {
    background: #1a1a1a;
    padding: 1rem;
    border-radius: var(--radius);
    box-shadow: 0 15px 35px rgba(0,0,0,0.6);
    margin-bottom: 2rem;
    border: 1px solid #333;
  }

  .channel-selector-top {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #333;
  }

  .match-page-header {
    margin-bottom: 2rem;
    text-align: center;
    background: #111;
    padding: 1.5rem;
    border-radius: var(--radius);
    border-left: 4px solid var(--primary-red);
  }

  .match-title {
    font-size: 1.6rem;
    font-weight: 900;
    color: var(--white);
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .live-indicator {
    background: var(--primary-red);
    color: white;
    padding: 3px 8px;
    font-size: 0.75rem;
    font-weight: 900;
    border-radius: 3px;
    vertical-align: middle;
    margin-right: 10px;
    animation: blink 1.5s infinite;
    display: inline-block;
  }

  @keyframes blink {
    0% { opacity: 1; }
    50% { opacity: 0.4; }
    100% { opacity: 1; }
  }

  .match-meta {
    color: #888;
    font-size: 0.95rem;
    font-weight: 700;
    text-transform: uppercase;
  }

  .player-section {
    margin-bottom: 0;
    border: none;
    box-shadow: none;
    background: #000;
    width: 100%;
  }

  .responsive-iframe-container {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    width: 100%;
    background: #000;
  }

  .responsive-iframe-container iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }

  .notice-bar {
    background: #fff3cd;
    color: #856404;
    padding: 1rem;
    font-size: 0.85rem;
    text-align: center;
    border-top: 1px solid #ffeeba;
    font-weight: 600;
  }

  .notice-bar a {
    color: inherit;
    text-decoration: underline;
  }

  .seo-content {
    padding: 2rem;
    color: var(--text-dark);
    line-height: 1.7;
    margin-top: 3rem;
  }

  .seo-content h3 {
    margin-bottom: 1rem;
    font-size: 1.25rem;
    font-weight: 800;
    color: var(--primary-red);
    text-transform: uppercase;
  }

  .embed-code {
    margin-top: 2rem;
    padding-top: 1.5rem;
