---
interface Channel {
  name: string;
  url: string;
}

interface Props {
  channels: Channel[];
}

const { channels } = Astro.props;
---

<div class="channel-selector">
  <div class="channel-buttons">
    {channels.map((channel, index) => (
      <button 
        class={`btn channel-btn ${index === 0 ? 'active' : ''}`} 
        data-url={channel.url}
      >
        <span>OPCIÃ“N</span> {index + 1} - {channel.name}
      </button>
    ))}
  </div>
</div>

<style>
  .channel-selector {
    margin: 0;
  }
  
  .channel-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
  }

  .channel-btn {
    font-size: 0.75rem;
    padding: 0.6rem 1rem;
    background-color: #333;
    border: 1px solid #444;
    color: #fff;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .channel-btn span {
    color: var(--primary-red);
    font-weight: 900;
  }

  .channel-btn:hover {
    background-color: #444;
    border-color: var(--primary-red);
    transform: translateY(-2px);
  }

  .channel-btn.active {
    background-color: var(--primary-red);
    border-color: var(--primary-red);
    box-shadow: 0 4px 15px rgba(211, 47, 47, 0.4);
  }

  .channel-btn.active span {
    color: white;
  }
</style>

<script>
  function setupChannelButtons() {
    const buttons = document.querySelectorAll('.channel-btn');
    const iframe = document.getElementById('match-player') as HTMLIFrameElement;

    if (!iframe) return;

    buttons.forEach(button => {
      button.addEventListener('click', () => {
        const url = button.getAttribute('data-url');
        if (url) {
          iframe.src = url;
          
          // Update active state
          buttons.forEach(btn => btn.classList.remove('active'));
          button.classList.add('active');
        }
      });
    });
  }

  // Run on page load
  setupChannelButtons();

  // Run on view transitions if enabled
  document.addEventListener('astro:after-swap', setupChannelButtons);
</script>
