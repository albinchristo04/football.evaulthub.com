---
interface Props {
  type: 'leaderboard' | 'mobile' | 'small' | 'square';
}

const { type } = Astro.props;

const ads = {
  leaderboard: { slot: '4498534581', style: 'display:inline-block;width:728px;height:90px' },
  mobile: { slot: '8797884002', style: 'display:inline-block;width:320px;height:50px' },
  small: { slot: '3480966381', style: 'display:inline-block;width:300px;height:100px' },
  square: { slot: '2063942933', style: 'display:inline-block;width:250px;height:250px' }
};

const currentAd = ads[type];
---

<div class="ad-container" style="text-align: center; margin: 1.5rem 0;">
  <span class="ad-label" style="display:block; font-size: 10px; color: #666; margin-bottom: 4px; text-transform: uppercase;">Publicidad</span>
  <ins class="adsbygoogle"
       style={currentAd.style}
       data-ad-client="ca-pub-7025462814384100"
       data-ad-slot={currentAd.slot}></ins>
</div>

<style>
  .ad-container {
    overflow: hidden;
    min-height: 50px;
  }
</style>
