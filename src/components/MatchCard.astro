---
import { slugify } from '../utils/slugify';

interface Props {
  match: {
    title: string;
    competition: string;
    time: string;
    channels: { name: string; url: string; }[];
  };
}

const { match } = Astro.props;
const slug = slugify(`${match.competition}-${match.title}`);
---

<div class="match-card card">
  <div class="match-header">
    <div class="match-info">
      <span class="match-time">{match.time}</span>
      <span class="match-icon">⚽</span>
      <span class="match-name">{match.title}</span>
    </div>
    <div class="match-action">
      <span class="expand-btn">VER CANALES »</span>
    </div>
  </div>
  <div class="match-content" style="display: none;">
    <div class="content-inner">
      <p class="competition-label">{match.competition}</p>
      <div class="channel-grid">
        {match.channels.map(channel => (
          <a href={`/partido/${slug}/`} class="btn channel-link">
            {channel.name}
          </a>
        ))}
      </div>
      <div class="match-page-link">
        <a href={`/partido/${slug}/`} class="full-page-btn">PÁGINA DEL PARTIDO</a>
      </div>
    </div>
  </div>
</div>

<style>
  .match-card {
    cursor: pointer;
    border-bottom: 1px solid var(--border);
    transition: background 0.2s;
  }

  .match-card:hover {
    background: #fafafa;
  }

  .match-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    gap: 1rem;
  }

  .match-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
    min-width: 0;
  }

  .match-time {
    font-weight: 800;
    color: var(--primary-red);
    font-size: 0.9rem;
    width: 45px;
  }

  .match-name {
    font-weight: 700;
    font-size: 0.95rem;
    color: var(--text-dark);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .expand-btn {
    background: #f0f0f0;
    color: #444;
    padding: 0.3rem 0.6rem;
    font-size: 0.75rem;
    font-weight: 800;
    border-radius: 3px;
    white-space: nowrap;
  }

  .match-card.open .expand-btn {
    background: var(--primary-red);
    color: white;
  }

  .match-content {
    background: #f9f9f9;
    border-top: 1px solid var(--border);
  }

  .content-inner {
    padding: 1rem;
  }

  .competition-label {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
  }

  .channel-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-bottom: 1.25rem;
  }

  .channel-link {
    font-size: 0.75rem;
    padding: 0.4rem 0.8rem;
    border-radius: 3px;
    box-shadow: 0 1px 2px rgba(0,0,0,0.1);
  }

  .full-page-btn {
    display: block;
    text-align: center;
    padding: 0.5rem;
    background: #eee;
    color: #666;
    font-size: 0.75rem;
    font-weight: 800;
    border-radius: 3px;
    text-transform: uppercase;
  }

  .full-page-btn:hover {
    background: #ddd;
    color: #333;
  }

  @media (max-width: 480px) {
    .match-header {
      padding: 0.6rem 0.75rem;
    }
    .match-time {
      width: 40px;
      font-size: 0.8rem;
    }
    .match-name {
      font-size: 0.85rem;
    }
    .expand-btn {
      padding: 0.25rem 0.5rem;
      font-size: 0.7rem;
    }
  }
</style>

<script>
  const cards = document.querySelectorAll('.match-card');
  cards.forEach(card => {
    const header = card.querySelector('.match-header');
    const content = card.querySelector('.match-content') as HTMLElement;
    
    header?.addEventListener('click', (e) => {
      e.stopPropagation();
      const isOpen = content.style.display === 'block';
      content.style.display = isOpen ? 'none' : 'block';
      card.classList.toggle('open', !isOpen);
    });
  });
</script>
